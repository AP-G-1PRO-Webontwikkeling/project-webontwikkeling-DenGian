<%- include("partials/header") %>
<%- include("partials/nav") %>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg p-4">
    <div class="flex items-center justify-between flex-column md:flex-row flex-wrap space-y-4 md:space-y-0 py-4 bg-white dark:bg-gray-900">
        <form action="/libraries" method="GET">
            <label for="table-search" class="sr-only">Search</label>
            <div class="relative">
                <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input type="text" name="searchTerm" id="table-search-users" class="block pt-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search for libraries" value="<%= searchTerm %>">
            </div>
            <input type="hidden" name="sortField" value="<%= sortField %>">
            <input type="hidden" name="sortDirection" value="<%= sortDirection %>">
            <button type="submit" class="hidden">Submit</button>
        </form>  
    </div>
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center">
                        <a href="?searchTerm=<%= searchTerm %>&sortField=name&sortDirection=<%= sortField === 'name' && sortDirection === 'asc' ? 'desc' : 'asc' %>">Name</a>
                        <% if(sortField === 'name') { %>
                            <% if(sortDirection === 'asc') { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 14l6-6 6 6" />
                                </svg>
                            <% } else { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 6l6 6 6-6" />
                                </svg>
                            <% } %>
                        <% } %>
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center">
                        <a href="?searchTerm=<%= searchTerm %>&sortField=website&sortDirection=<%= sortField === 'website' && sortDirection === 'asc' ? 'desc' : 'asc' %>">Website</a>
                        <% if(sortField === 'website') { %>
                            <% if(sortDirection === 'asc') { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 14l6-6 6 6" />
                                </svg>
                            <% } else { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 6l6 6 6-6" />
                                </svg>
                            <% } %>
                        <% } %>
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center">
                        <a href="?searchTerm=<%= searchTerm %>&sortField=stars&sortDirection=<%= sortField === 'stars' && sortDirection === 'asc' ? 'desc' : 'asc' %>">Stars</a>
                        <% if(sortField === 'stars') { %>
                            <% if(sortDirection === 'asc') { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 14l6-6 6 6" />
                                </svg>
                            <% } else { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 6l6 6 6-6" />
                                </svg>
                            <% } %>
                        <% } %>
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center">
                        <a href="?searchTerm=<%= searchTerm %>&sortField=latestVersion&sortDirection=<%= sortField === 'latestVersion' && sortDirection === 'asc' ? 'desc' : 'asc' %>">Latest Version</a>
                        <% if(sortField === 'latestVersion') { %>
                            <% if(sortDirection === 'asc') { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 14l6-6 6 6" />
                                </svg>
                            <% } else { %>
                                <svg class="w-4 h-4 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 6l6 6 6-6" />
                                </svg>
                            <% } %>
                        <% } %>
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">Action</th>
            </tr>
        </thead>
        <tbody>
            <% libraries.forEach(library => { %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                        <img class="w-10 h-10 rounded-full" src="<%= library.imageUrl %>" alt="<%= library.name %> image">
                        <div class="ps-3">
                            <div class="text-base font-semibold"><%= library.name %></div>
                        </div>  
                    </th>
                    <td class="px-6 py-4"><%= library.website %></td>
                    <td class="px-6 py-4"><%= library.stars %></td>
                    <td class="px-6 py-4"><%= library.latestVersion %></td>
                    <td class="px-6 py-4">
                        <a href="/libraries/<%= library.id %>" type="button" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">View</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include("partials/footer") %>
